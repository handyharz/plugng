# Server Configuration
NODE_ENV=development
PORT=8000
API_VERSION=v1

# Database (MongoDB Atlas)
# Replace with your connection string from the Atlas dashboard
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/plugng?retryWrites=true&w=majority

# Redis (Upstash)
# Get from Upstash Console
REDIS_URL=rediss://default:<password>@<region>.upstash.io:6379

# JWT Security
# Generate a strong 64-char hex string for these
JWT_ACCESS_SECRET=your_jwt_access_secret_min_64_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_min_64_chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Paystack (Nigerian Payments)
# Get from Paystack Dashboard -> Settings -> API Keys & Webhooks
PAYSTACK_SECRET_KEY=your_paystack_secret_key_from_dashboard
PAYSTACK_PUBLIC_KEY=your_paystack_public_key_from_dashboard
PAYSTACK_WEBHOOK_SECRET=your_paystack_webhook_secret_from_dashboard

# Cloudflare R2 (Zero-Cost Image Storage)
# Get Account ID and API tokens from Cloudflare Dashboard
R2_ACCESS_KEY_ID=xxxxxxxxxxxxxxxxxxxxxxxx
R2_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxx
R2_ENDPOINT=https://<account_id>.r2.cloudflarestorage.com
R2_BUCKET_NAME=plugng-products
R2_PUBLIC_URL=https://pub-xxxxxxxxxxxxxxxx.r2.dev
R2_ACCOUNT_ID=xxxxxxxxxxxxxxxxxxxxxxxx

# Termii (SMS Notifications)
# Get API Key from Termii Dashboard
TERMII_API_KEY=TLxxxxxxxxxxxxxxxxxxxxxxxx
TERMII_SENDER_ID=PlugNG

# Email (Resend)
# Get API Key from Resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxx
FROM_EMAIL=no-reply@plugng.shop

# CORS / Frontend Integration
FRONTEND_URL=http://localhost:3000

# Admin Defaults
ADMIN_EMAIL=admin@plugng.shop
ADMIN_PASSWORD=SetSecurePasswordHere123!
